---
import BreathingGraphic from "./BreathingGraphic.astro";
---

<section class="hero">
  <div class="inner">
    <div class="copy">
      <h1 class="title">Mindful AI</h1>
      <p class="clarity">AI built with clarity.</p>
      <p class="tag">
        Calm, clear, outcome-driven machine learning.  
        Breathe. Build. Ship.
      </p>
    </div>

    <div class="visual">
      <BreathingGraphic />
    </div>
  </div>
</section>

<style>
  .hero {
    padding-block: clamp(48px, 6vw, 96px);
  }

  .inner {
    max-width: 1100px;
    margin-inline: auto;
    padding-inline: clamp(16px, 4vw, 32px);
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(24px, 4vw, 48px);
    align-items: center;
  }
  @media (min-width: 880px) {
    .inner {
      grid-template-columns: 1.1fr 0.9fr; /* text | graphic */
    }
  }

  .copy {
    display: grid;
    gap: 14px;
  }
  .title {
    font-size: clamp(36px, 6vw, 64px);
    line-height: 1.05;
    letter-spacing: -0.02em;
    margin: 0;
  }

  .clarity {
    font-size: clamp(20px, 2.6vw, 28px);
    font-weight: 600;
    color: oklch(75% 0.1 220); /* bright calming accent */
    margin: 0;
    text-shadow: 0 0 12px oklch(65% 0.1 220 / 0.5); /* subtle glow */
  }

  .tag {
    font-size: clamp(16px, 2.2vw, 20px);
    color: oklch(38% 0.02 250);
    margin: 0;
  }

  .visual {
    display: grid;
    place-items: center;
  }
</style>