---
import BreathingGraphic from "./BreathingGraphic.astro";
---

<section class="hero">
  <div class="inner">
    <div class="copy">
      <h1 class="title">Mindful AI</h1>
      <p class="tag">
        Calm, clear, outcome-driven machine learning.  
        Breathe. Build. Ship.
      </p>
      <!-- Optional CTA buttons -->
      <!-- <div class="actions">
        <a href="/contact" class="btn">Work with us</a>
        <a href="/services" class="btn ghost">What we do</a>
      </div> -->
    </div>

    <div class="visual">
      <BreathingGraphic />
    </div>
  </div>
</section>

<style>
  .hero {
    padding-block: clamp(48px, 6vw, 96px);
  }

  /* Horizontal on wide screens, stacked on mobile */
  .inner {
    max-width: 1100px;
    margin-inline: auto;
    padding-inline: clamp(16px, 4vw, 32px);
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(24px, 4vw, 48px);
    align-items: center;
  }
  @media (min-width: 880px) {
    .inner {
      grid-template-columns: 1.1fr 0.9fr; /* text | graphic */
    }
  }

  .copy {
    display: grid;
    gap: 14px;
  }
  .title {
    font-size: clamp(36px, 6vw, 64px);
    line-height: 1.05;
    letter-spacing: -0.02em;
    margin: 0;
  }
  .tag {
    font-size: clamp(16px, 2.2vw, 20px);
    color: oklch(38% 0.02 250);
    margin: 0;
  }

  .visual {
    display: grid;
    place-items: center;
  }

  /* Optional button styles if you keep CTAs */
  .actions { display: flex; gap: 12px; margin-top: 10px; }
  .btn {
    padding: 10px 16px; border-radius: 999px;
    background: oklch(78% 0.09 220); color: white; text-decoration: none;
    font-weight: 600;
  }
  .btn.ghost {
    background: transparent; color: oklch(45% 0.08 220);
    outline: 1px solid oklch(80% 0.05 220);
  }
</style>