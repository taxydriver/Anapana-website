---
const services = [
  {
    name: 'Recommender Systems',
    description: 'From CF and ALS to DCNv2 and MMoE. APIs and Streamlit demos.',
    href: 'https://github.com/taxydriver', // or leave empty
    icon: 'recsys',
  },
  {
    name: 'Goldminer Agent',
    description: 'Automates data ingestion, cleaning, features, and baseline models.',
    href: 'https://github.com/taxydriver', // or leave empty
    icon: 'goldminer',
  },
  {
    name: 'Film-maker Agent',
    description: 'Script-to-shots pipeline for generative media experiments.',
    href: '#', // or GitHub link when ready
    icon: 'filmmaker',
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">What I Build</h2>
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {
          services.map((service) => (
            <a
              href={service.href}
              class="border-primary-900/10 dark:border-primary-300/10 hover:border-primary-600 dark:hover:border-primary-400 flex flex-col gap-4 rounded-3xl border p-6 transition"
            >
              <div class="h-10 w-10 text-primary-600 dark:text-primary-400">
                {service.icon === 'recsys' && (
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <rect x="3" y="3" width="4" height="18" rx="1.5"/>
                    <rect x="10" y="9" width="4" height="12" rx="1.5"/>
                    <rect x="17" y="5" width="4" height="16" rx="1.5"/>
                  </svg>
                )}
                {service.icon === 'goldminer' && (
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path d="M3 21v-2l6-6 4 4-6 6H5a2 2 0 0 1-2-2Z" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"/>
                    <path d="M14 10l7-7" strokeWidth="2" strokeLinecap="round"/>
                    <path d="M14 4h7v6" strokeWidth="2" strokeLinecap="round"/>
                  </svg>
                )}
                {service.icon === 'filmmaker' && (
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <rect x="3" y="5" width="18" height="14" rx="2"/>
                    <path d="M7 5V3m10 2V3M7 19v2m10-2v2" strokeWidth="2" strokeLinecap="round"/>
                    <polygon points="10,9 15,12 10,15" fill="currentColor"/>
                  </svg>
                )}
              </div>
              <h3 class="text-xl font-semibold">{service.name}</h3>
              <p class="text-primary-950/70 dark:text-primary-200/70 text-base">{service.description}</p>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>