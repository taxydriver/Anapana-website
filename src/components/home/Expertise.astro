---
const expertise = [
  {
    icon: "recsys",
    title: "Recommender Systems",
    description: "Deep & classical RecSys: from Matrix Factorization and ALS to DCNv2 and MMoE multi-task CTR/CVR models."
  },
  {
    icon: "ai",
    title: "AI Agents",
    description: "Custom intelligent agents like Goldminer (data insights) and Film-maker (generative media)."
  },
  {
    icon: "cloud",
    title: "MLOps & Cloud",
    description: "Deploy on Google Cloud (Vertex AI, Kubeflow) or AWS/Azure. Production-ready workflows with monitoring."
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="space-y-12">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Expertise</h2>
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {
          expertise.map((item) => (
            <div class="flex flex-col gap-4 rounded-3xl border p-6">
              <div class="text-3xl">
                {
                  item.icon === "recsys" && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <rect x="3" y="10" width="3" height="8" rx="1.5" fill="currentColor"/>
                      <rect x="9.5" y="6" width="3" height="12" rx="1.5" fill="currentColor"/>
                      <rect x="16" y="3" width="3" height="15" rx="1.5" fill="currentColor"/>
                    </svg>
                  )
                }
               
               
                {
                  item.icon === "ai" && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <rect x="6" y="7" width="12" height="10" rx="6" fill="currentColor" opacity="0.15"/>
                      <rect x="6" y="7" width="12" height="10" rx="6" stroke="currentColor" stroke-width="1.5" fill="none"/>
                      <circle cx="9" cy="12" r="1" fill="currentColor"/>
                      <circle cx="15" cy="12" r="1" fill="currentColor"/>
                      <rect x="10.5" y="15" width="3" height="1" rx="0.5" fill="currentColor"/>
                      <rect x="4" y="10" width="2" height="4" rx="1" fill="currentColor"/>
                      <rect x="18" y="10" width="2" height="4" rx="1" fill="currentColor"/>
                    </svg>
                  )
                }
                {
                  item.icon === "cloud" && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path d="M7 19a5 5 0 0 1 0-10 7 7 0 0 1 13.94 1.5A4.5 4.5 0 0 1 19 19H7z" fill="currentColor" opacity="0.15"/>
                      <path d="M7 19a5 5 0 0 1 0-10 7 7 0 0 1 13.94 1.5A4.5 4.5 0 0 1 19 19H7z" stroke="currentColor" stroke-width="1.5" fill="none"/>
                    </svg>
                  )
                }
              </div>
              <h3 class="text-xl font-semibold">{item.title}</h3>
              <p class="text-primary-950/70 dark:text-primary-200/70 text-base">
                {item.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>